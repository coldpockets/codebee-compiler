{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
